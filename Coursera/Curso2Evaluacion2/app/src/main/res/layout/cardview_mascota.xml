<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_s">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/beto"
            android:layout_marginBottom="@dimen/margin_xs"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="@dimen/icon_l"
                android:layout_height="@dimen/icon_l"
                android:background="@drawable/whitebone_48"
                android:layout_marginLeft="@dimen/margin_xs"
                android:layout_marginRight="@dimen/margin_xs"/>
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beto"
                android:textSize="@dimen/text_l"
                android:layout_alignBottom="@+id/btnLike"
                android:layout_toRightOf="@+id/btnLike"
                android:layout_toEndOf="@+id/btnLike" />
            <ImageView
                android:id="@+id/imgRating"
                android:layout_width="@dimen/icon_l"
                android:layout_height="@dimen/icon_l"
                android:background="@drawable/colorbone_48"
                android:layout_marginLeft="@dimen/margin_xs"
                android:layout_marginRight="@dimen/margin_xs"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/text_l"
                android:layout_alignBottom="@id/imgRating"
                android:layout_toLeftOf="@id/imgRating"
                android:layout_toStartOf="@id/imgRating"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>